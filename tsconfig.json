{
  "compilerOptions": {
    "target": "es2018",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
